# Environment variables template for GRIN-to-S3 Docker deployment
# Copy this file to .env and configure your values

# Application Configuration
GRIN_CONFIG_DIR=/app/config
GRIN_DATA_DIR=/app/data
GRIN_OUTPUT_DIR=/app/output
GRIN_LOG_DIR=/app/logs
GRIN_STAGING_DIR=/app/staging

# OAuth2 Configuration
GRIN_CLIENT_SECRET_FILE=/app/secrets/client_secret.json
GRIN_CREDENTIALS_DIR=/app/.config/grin-to-s3
GRIN_OAUTH_PORT=58432

# GRIN API Configuration
GRIN_RATE_LIMIT=5.0
GRIN_LOG_LEVEL=INFO